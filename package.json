{
  "name": "http-public",
  "version": "0.0.1",
  "description": "Forward HTTP traffic from the public internet to localhost.",
  "bin": {
    "http-public": "./build/bin"
  },
  "scripts": {
    "demo": "ts-node src/bin/",
    "build": "rimraf build/ && tsc -p tsconfig.prod.json",
    "test": "mocha",
    "lint:staged": "lint-staged",
    "tdd": "npm -s t -- -R min -w",
    "cover": "c8 -r text -r html -r lcov npm -s t",
    "postinstall": "is-ci || husky install"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "exclude": [
      "src/bin/*.ts"
    ],
    "spec": [
      "src/**/*.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": 500
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "tunnel",
    "local",
    "host"
  ],
  "files": [
    "build/"
  ],
  "author": "Tim Davis <contact@timdav.is>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.16",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.1",
    "@types/sinon": "^10.0.0",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "c8": "^7.7.0",
    "chai": "^4.3.4",
    "eslint": "^7.23.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.0.0",
    "mocha": "^8.3.2",
    "rimraf": "^3.0.2",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3",
    "ws": "^7.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebearingedge/http-public.git"
  },
  "bugs": {
    "url": "https://github.com/thebearingedge/http-public/issues"
  },
  "homepage": "https://github.com/thebearingedge/http-public#readme",
  "dependencies": {
    "commander": "^7.2.0"
  }
}
